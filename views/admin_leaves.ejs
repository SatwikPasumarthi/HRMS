  <div class="container">
    <%if(leave_foundItems.length === 0){%>
      <h3>No Information</h3>
    <%} else{%>
      <%leave_foundItems.forEach(function(employee){%>
    <div class="card" style="align-items: center;">
      <div class="imgBx">
        <img src="images/avatar_img.png" style="width: 200px; height: 200px; margin: 0 auto; align-items: center;;">
      </div>
      <br>
      <div class="content">



        <h1><%= employee.employee_name %></h1>
        <p><%= employee.employee_email %></p>
        <p>From date: <%= employee.fromdate %></p>
        <p style="text-align: center;">To</p>
        <p>To date: <%= employee.todate %></p>


        <!-- <p><span style="text-align: left;"></span> <%= employee.fromdate %><span style="font-weight:bold">To</span> <span style="text-align: right;"><%= employee.todate %></span></p> -->
        <p>Reason: <%= employee.reason %></p>
        <form class="" action="/admin_leaves" method="post">
          <input type="radio" name="confirmation" value="Approved"><span>&nbspApproved</span>
          <input type="radio" name="confirmation" value="Rejected"><span>&nbspRejected</span>
          <br><br>
          <input type="submit" id="btn"  name="submitBtn" value="Submit" class="btn btn-primary" style="width: 9.375rem; border-radius: 10px; margin: 0 0 10px 0">
          &nbsp;&nbsp;
          <br>
        </form>

      </div>
    </div>
    <br><br>
