      <div class="col-md-6 offset-md-1">
    <h2>Request Leave</h2><br><br>

      </div>

    </div>
    <%if(foundItems.length === 0){%>
      <h4></h4>
    <%} else{%>
      <%foundItems.forEach(function(employee){%>
    <div class="row ">
      <div class="col-lg-10 offset-lg-1">



            <form action="" method="post" enctype="multipart/form-data" role="form">
              <div class="row">

                    <div class="col-lg-5">
                      <div class="form-group">
                        <label for="empname">Name</label>
                        <input type="text" class="form-control" id="empname" name="empname" value="<%= employee.employee_first_name + " "+ employee.employee_last_name %>" placeholder="Enter Name" required="">
                        <span id="available"></span>
                      </div>
                    </div>
                    <div class="col-lg-5">
                      <label for="email">Email</label>
                      <input type="email" name="email" class="form-control" value="<%= employee.employee_email %>" placeholder="Enter Email">
                    </div>
                    </div>
                    <div class="row">
                      <div class="col-lg-5">
                        <div class="form-group">
                          <label for="empname">Designation</label>
                          <input type="text" class="form-control" id="empname" name="empname" value="<%= employee.employee_designation %>" placeholder="Enter Name" required="">
                          <span id="available"></span>
                        </div>
                      </div>


                    </div>
                    <%})%>
                  <%}%>
                  </form>
                  <form class="" action="/request_leave" method="post">

                        <div class="row">
                          <div class="col-md-5">
                            <div class="form-group">
                              <label for="email">Email ID</label>
                              <input type="email" class="form-control" id="email" name="employee_email" placeholder="Enter Email ID">
                            </div>
                          </div>
                          <div class="col-md-5">
                            <div class="form-group">
                              <label for="email">Employee Name</label>
                              <input type="text" class="form-control" id="email" name="employee_name" placeholder="Enter Name">
                            </div>
                          </div>



                      <div class="col-lg-5">
                        <label for="from">From</label>
                        <input type="date" name="fromdate" class="form-control" placeholder="mm/dd/yyyy">
                      </div>

                      <div class="col-lg-5">
                        <label for="to">To</label>
                        <input type="date" name="todate" class="form-control" placeholder="mm/dd/yyyy">
                      </div>



                    </div>
                    <div class="row">
                      <div class="col-lg-5">
                        <div class="form-group">
                          <label for="type">Leave Type</label>
                          <select class="form-control" id="type" name="leavetype">
                            <option>Leave Type</option>
                            <option value="Paid Leave">Paid Leave</option>
                            <option value="Unpaid Leave">Unpaid Leave</option>
                          </select>
                        </div>
                      </div>
                      </div>
                      <div class="row">
                        <div class="col-lg-10">
                          <div class="form-group">
                            <label for="reason">Description/Reason for Leave</label>
                            <textarea class="form-control" id="reason" name="reason" rows="4"></textarea>
                          </div>
                        </div>
                      </div>

                      <div class="col-lg-12" style="">
                        <input type="submit" id="btn" name="btn" value="Submit" class="btn btn-primary" style="width: 100px; border-radius: 10px;">
