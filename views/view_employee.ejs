  <div class="container mainForm" >
    <h2>View Employee Details</h2>
    <form action="/view_employee" method="post" >
      <div class="row">
        <div class="col-md-8">
          <div class="row">
            <div class="col-md-12">
              <div class="form-group">
                <label for="email">Email ID</label>
                <input type="email" class="form-control" id="email" name="employee_email" placeholder="Enter Email ID">
              </div>
            </div>


        <div class="col-md-12" style="">

          <input type="submit" id="btn" name="submitBtn" value="Submit" class="btn btn-primary" style="width: 100px; border-radius: 10px;">
          &nbsp;&nbsp;
        </div>
      </div>
    </div>
    </div>
    </form>
    <div class="card-body" >
      <form action="index.html" method="post" enctype="multipart/form-data" role="form">
        <div class="row">
          <div class="col-md-8">
            <div class="row">


              <%if(foundItems.length === 0){%>
              <%} else{%>
                <%foundItems.forEach(function(employee){%>
                  <!-- <%= employee.employee_photo %> -->
                  <div class="col-md-12">
                    <div style="text-align: center;">
                        <img id="img-upload">
                        <div id="tem_img">
                          <img src="Images\avatar_img.png" alt="" width="150px" height="180px">
                        </div>
                        <br><br>

                    </div>
                  </div>



              <div class="col-md-6">
                <div class="form-group">
                  <label for="FN">Employee Name</label>
                  <div class="card">
                    <div class="card-body"><%= employee.employee_first_name + " "+ employee.employee_last_name %></div>
                  </div>
                  <span id="available"></span>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <label for="LN">Company Name</label>
                  <div class="card">
                    <div class="card-body"><%= employee.employee_company %></div>
                  </div>
                  <span id="available"></span>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <label for="LN">Father Name</label>
                  <div class="card">
                    <div class="card-body"><%= employee.employee_fathers_name %></div>
                  </div>
                  <span id="available"></span>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <label for="LN">DOB</label>
                  <div class="card">
                    <%var mon1 = employee.employee_dob.getMonth()+1%>
                    <%var dob = employee.employee_dob.getDate() + "-" + mon1 + "-" + employee.employee_dob.getFullYear()%>
                    <div class="card-body"><%= dob %></div>
                  </div>
                  <span id="available"></span>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <label for="LN">Date of Joining</label>
                  <div class="card">
                    <%var mon2= employee.employee_doj.getMonth()+1%>
                    <%var doj = employee.employee_doj.getDate() + "-" + mon2 + "-" + employee.employee_doj.getFullYear()%>
                    <div class="card-body"><%= doj %></div>
                  </div>
                  <span id="available"></span>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <label for="LN">Gender</label>
                  <div class="card">
                    <div class="card-body"><%= employee.employee_gender %></div>
                  </div>
                  <span id="available"></span>
                </div>
              </div>
              <div class="col-md-12">
                <div class="form-group">
                  <label for="LN">Email</label>
                  <div class="card">
                    <div class="card-body"><%= employee.employee_email %></div>
                  </div>
                  <span id="available"></span>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <label for="LN">Phone Number </label>
                  <div class="card">
                    <div class="card-body"><%= employee.employee_phno_1 %></div>
                  </div>
                  <span id="available"></span>
                </div>
              </div>

              <div class="col-md-6">
                <div class="form-group">
                  <label for="LN">Salary</label>
                  <div class="card">
                    <div class="card-body"><%= employee.employee_salary %></div>
                  </div>
                  <span id="available"></span>
                </div>
              </div>
              <div class="col-md-12">
                <div class="form-group">
                  <label for="LN">Designation</label>
                  <div class="card">
                    <div class="card-body"><%= employee.employee_designation %></div>
                  </div>
                  <span id="available"></span>
                </div>
              </div>
              <div class="col-md-12">
                <div class="form-group">
                  <label for="LN">Address</label>
                  <div class="card">
                    <div class="card-body"><%= employee.employee_address %></div>
                  </div>
                  <span id="available"></span>
                </div>
              </div>
              <%})%>

            <%}%>











            </div>
          </div>
        </div>
    </div>
    </form>

  </div>


