<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <!-- ===== CSS ===== -->
  <link rel="stylesheet" href="assets/css/styles.css">

  <title>Performance</title>
  <style>
    .mainForm {
      font-family: 'Poppins', sans-serif;
      font-weight: 500;
      background-color: white;
      background-attachment: fixed;
    }

    .btn-file {
      position: relative;
      overflow: visible;
    }

    .btn-file input[type=file] {
      position: absolute;
      top: 0;
      right: 0;
      min-width: 100%;
      min-height: 100%;
      font-size: 100px;
      text-align: right;
      filter: alpha(opacity=0);
      opacity: 0;
      background: white;
      cursor: pointer;
      display: block;
    }

    table {
      border-collapse: collapse;
      width: 100%;
      text-align: center;
    }
    .res-table{
      overflow-x: auto;
    }
  </style>

</head>

<body id="body-pd">
  <div class="l-navbar" id="navbar">
    <nav class="nav">
      <div>
        <div class="nav__brand">
          <ion-icon name="menu-outline" class="nav__toggle" id="nav-toggle"></ion-icon>
          <a href="#" class="nav__logo"><img src="images\logo2.png" width="100px" style="margin-left: 20px;" alt=""></a>
        </div>
        <div class="nav__list">
          <a href="/" class="nav__link active">
            <ion-icon name="home-outline" class="nav__icon"></ion-icon>
            <span class="nav__name">Dashboard</span>
          </a>
          <div class="nav__link dropdown">
            <ion-icon name="card-outline" class="nav__icon"></ion-icon>
            <span class="nav__name">Allowances</span>

            <ion-icon name="chevron-down-outline" class="collapse__link"></ion-icon>

            <ul class="collapse__menu">
              <a href="/employee_mc" class="collapse__sublink">Medical</a>
              <a href="/employee_LTA" class="collapse__sublink">LTA</a>
              <a href="/employee_ec" class="collapse__sublink">Expense</a>
            </ul>
          </div>


          <a href="/employee_payroll" class="nav__link">
            <ion-icon name="calculator-outline" class="nav__icon"></ion-icon>
            <span class="nav__name">Payroll</span>
          </a>


          <a href="/employee_attendance" class="nav__link">
          <ion-icon name="pie-chart-outline" class="nav__icon"></ion-icon>
            <span class="nav__name">Attendance</span>
          </a>

          <div class="nav__link dropdown">
            <ion-icon name="bug-outline" class="nav__icon"></ion-icon>
            <span class="nav__name">Leave</span>

            <ion-icon name="chevron-down-outline" class="collapse__link"></ion-icon>

            <ul class="collapse__menu">
              <a href="/leave_status" class="collapse__sublink">Leave Status</a>
              <a href="/request_leave" class="collapse__sublink">Request Leave</a>
            </ul>
          </div>
          <a href="/employee_performance" class="nav__link">
            <ion-icon name="laptop-outline" class="nav__icon"></ion-icon>
            <span class="nav__name">Performance</span>
          </a>
          <form action="/logout?_method=DELETE" method="POST">

            <a href="#" type="submit" class="nav__link">
                <ion-icon name="log-out-outline" class="nav__icon"></ion-icon>
              <button type="submit" name="button" class="btn">LogOut</button>


            </a>
          </form>
        </div>
      </div>


    </nav>
  </div>
  <div class="container-fluid mainForm" style="margin-top: 30px;">
    <div class="row">
      <div class="col-md-10 offset-md-1">
    <h2>Performance</h2><br><br>
    <%if(foundItems.length === 0){%>
      <h4></h4>
    <%} else{%>
      <%foundItems.forEach(function(employee){%>

            <form action="index.html" method="post" enctype="multipart/form-data" role="form">
              <div class="row">
                <div class="col-md-8">
                  <div class="row">
                    <div class="col-md-6">
                      <div class="form-group">
                        <label for="LN">Employee Name</label>
                        <div class="card">
                          <div class="card-body"><%= employee.employee_first_name + " "+ employee.employee_last_name %></div>
                        </div>
                        <span id="available"></span>
                      </div>
                    </div>
                    <div class="col-md-6">
              <div class="form-group">
                <label for="LN">Department</label>
                <div class="card">
                  <div class="card-body"><%= employee.employee_department %></div>
                </div>
                <span id="available"></span>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <label for="LN">Company Name</label>
                <div class="card">
                  <div class="card-body"><%= employee.employee_company %></div>
                </div>
                <span id="available"></span>
              </div>
            </div>

            <div class="col-md-6">
              <div class="form-group">
                <label for="LN">Designation</label>
                <div class="card">
                  <div class="card-body"><%= employee.employee_designation %></div>
                </div>
                <span id="available"></span>
              </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                  <label for="LN">Email</label>
                  <div class="card">
                    <div class="card-body"><%= employee.employee_email %></div>
                  </div>
                  <span id="available"></span>
                </div>
              </div>
              <%})%>

    <%}%>
    <%if(performance_foundItems.length === 0){%>
      <h4>No Information</h4>
    <%} else{%>
      <%performance_foundItems.forEach(function(employee_performance){%>
                    <div class="col-md-6">
                      <div class="form-group">
                        <label for="LN">Role</label>
                        <div class="card">
                          <div class="card-body"><%= employee_performance.role %></div>
                        </div>
                        <span id="available"></span>
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="form-group">
                        <label for="LN">Manager's Name</label>
                        <div class="card">
                          <div class="card-body"><%= employee_performance.manager_name %></div>
                        </div>
                        <span id="available"></span>
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="form-group">
                        <label for="LN">Project's Worked On</label>
                        <div class="card">
                          <div class="card-body"><%= employee_performance.project %></div>
                        </div>
                        <span id="available"></span>
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="form-group">
                        <label for="LN">Review Period</label>
                        <div class="card">
                          <div class="card-body"><%= employee_performance.review_period %></div>
                        </div>
                        <span id="available"></span>
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="form-group">
                        <label for="LN">Review Date</label>
                        <div class="card">
                          <%var mon = employee_performance.review_date.getMonth()+1%>
                          <%var reviewdate = employee_performance.review_date.getDate() + "-" + mon + "-" + employee_performance.review_date.getFullYear()%>
                          <div class="card-body"><%= reviewdate %></div>
                        </div>
                        <span id="available"></span>
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="form-group">
                        <label for="LN">Skill Set</label>
                        <div class="card">
                          <div class="card-body"><%= employee_performance.skill_set %></div>
                        </div>
                        <span id="available"></span>
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="form-group">
                        <label for="LN">Quality of Work</label>
                        <div class="card">
                          <div class="card-body"><%= employee_performance.quality_of_work %></div>
                        </div>
                        <span id="available"></span>
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="form-group">
                        <label for="LN">Attitude</label>
                        <div class="card">
                          <div class="card-body"><%= employee_performance.attitude %></div>
                        </div>
                        <span id="available"></span>
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="form-group">
                        <label for="LN">Efficiency</label>
                        <div class="card">
                          <div class="card-body"><%= employee_performance.efficiency %></div>
                        </div>
                        <span id="available"></span>
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="form-group">
                        <label for="LN">Reliability</label>
                        <div class="card">
                          <div class="card-body"><%= employee_performance.reliability %></div>
                        </div>
                        <span id="available"></span>
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="form-group">
                        <label for="LN">Teamwork</label>
                        <div class="card">
                          <div class="card-body"><%= employee_performance.team_work %></div>
                        </div>
                        <span id="available"></span>
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="form-group">
                        <label for="LN">Communication</label>
                        <div class="card">
                          <div class="card-body"><%= employee_performance.communication %></div>
                        </div>
                        <span id="available"></span>
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="form-group">
                        <label for="LN">Leadership</label>
                        <div class="card">
                          <div class="card-body"><%= employee_performance.leadership %></div>
                        </div>
                        <span id="available"></span>
                      </div>
                    </div>
                    <%})%>

    <%}%>


                  </div>
                  </div>

                </div>

              </div>
            </form>

        <br><br>
      </div>
    </div>
  </div>


  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <script src="https://unpkg.com/ionicons@5.1.2/dist/ionicons.js"></script>
  <script src="assets/js/main.js"></script>




</body>

</html>
