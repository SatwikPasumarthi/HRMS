  </div>
  <div class="container-fluid mainForm" style="margin-top: 30px;">
    <div class="row">
      <div class="col-md-10 offset-md-1">
    <h3>Edit Employee details</h3><br><br>

    <form action="/edit_employee" method="post" >
      <div class="row">
        <div class="col-md-8">
          <div class="row">
            <div class="col-md-12">
              <div class="form-group">
                <label for="email">Email ID</label>
                <input type="email" class="form-control" id="email" name="employee_email" placeholder="Enter Email ID">
              </div>
            </div>


        <div class="col-md-12" style="">

          <input type="submit" id="btn" name="submitBtn" value="Submit" class="btn btn-primary" style="width: 100px; border-radius: 10px;">
          &nbsp;&nbsp;
        </div>
      </div>
    </div>
    </div>
    </form>

    <%if(foundItems.length === 0){%>
      <br>
    <%} else{%>
      <%foundItems.forEach(function(employee){%>


            <br>
            <form action="/edit_employee/<%= employee._id %>?_method=put" method="post" >
              <div class="row">
                <div class="col-md-8">
                  <div class="row">

                    <div class="col-md-6">
                      <div class="form-group">
                        <label for="FN">First Name</label>
                        <input type="text" class="form-control" id="FN" name="employee[employee_first_name]" value="<%= employee.employee_first_name %>">
                        <span id="available"></span>
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="form-group">
                        <label for="LN">Last Name</label>
                        <input type="text" class="form-control" id="LN" name="employee[employee_last_name]" value="<%= employee.employee_last_name %>">
                        <span id="available"></span>
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="form-group">
                        <label for="empname">Father's Name</label>
                        <input type="text" class="form-control" id="empname" name="employee[employee_fathers_name]" value="<%= employee.employee_fathers_name %>">
                        <span id="available"></span>
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="form-group">
                        <label for="phn">Phone Number 1</label>
                        <input type="tel" class="form-control" id="phn" name="employee[employee_phno_1]"  value="<%= employee.employee_phno_1 %>" >
                      </div>
                    </div>
                    <div class="col-md-12">
                      <div class="form-group">
                        <label for="address">Permanent Address</label>
                        <textarea class="form-control" id="address" name="employee[employee_address]" rows="4" value=""><%= employee.employee_address %></textarea>
                      </div>
                    </div>
                  </div>
                </div>
                <!--display image-->
                <div class="col-md-4">
                  <div class="row">
                    <div class="col-md-12">
                      <div style="text-align: center;">
                          <img id="img-upload">
                          <div id="tem_img">
                            <img src="Images\avatar_img.png" alt="" width="150px" height="180px">
                          </div>
                          <br><br>
                          <div class="input-group">
                            <span class="input-group-btn">
                              <span class="btn btn-info btn-file">
                                Image(4X6)<input type="file" id="imginp" name="employee[employee_photo]" value="<%= employee.employee_photo %>">
                              </span>
                            </span>
                          </div>
                      </div>
                    </div>
                  </div>
                </div>
                <!--Salary-->
                <div class="col-md-4">
                  <div class="form-group">
                    <label for="salary">Salary</label>
                    <input type="number" name="employee[employee_salary]" class="form-control" value="<%= employee.employee_salary %>">
                  </div>
                </div>

                <!--designation-->
                <div class="col-md-4">
                  <div class="form-group">
                    <label for="designation">Designation</label>
                    <select class="form-control" id="designation" name="employee[employee_designation]" value="<%= employee.employee_designation %>">
                      <option>Choose Designation</option>
                      <option>Trainee</option>
                      <option>Software Engineer</option>
                      <option>System Analyst</option>
                      <option>Project manager</option>
                      <option>Delivery Head</option>
                      <option>Business Analyst</option>
                      <option>Architect</option>
                      <option>Technical Specialist</option>
                    </select>
                  </div>
                </div>
                <div class="col-md-12" style="">

                  <input type="submit" id="btn" name="btn"  class="btn btn-primary" style="width: 100px; border-radius: 10px;">
                  &nbsp;&nbsp;
                </div>
              </div>
            </form>


        <br><br>
      </div>
    </div>
    <%})%>

  <%}%>
  </div>




  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
