  <div class="container-fluid mainForm" style="margin-top: 30px;">
    <h3>Add Employee</h3>
    <div class="row">
      <div class="col-md-10 offset-md-1">

            <form action="/add_employee" method="post" >
              <div class="row">
                <div class="col-md-8">
                  <div class="row">
                    <div class="col-md-6">
                      <div class="form-group">
                        <label for="FN">First Name</label>
                        <input type="text" class="form-control" id="FN" name="employee[employee_first_name]" placeholder="First Name" required="">
                        <span id="available"></span>
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="form-group">
                        <label for="LN">Last Name</label>
                        <input type="text" class="form-control" id="LN" name="employee[employee_last_name]" placeholder="Last Name" required="">
                        <span id="available"></span>
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="form-group">
                        <label for="empname">Father's Name</label>
                        <input type="text" class="form-control" id="empname" name="employee[employee_fathers_name]" placeholder="Enter Name" required="">
                        <span id="available"></span>
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="form-group">
                        <label for="DOB">Date of Birth</label>
                        <input type="date" class="form-control" id="DOB" name="employee[employee_dob]" placeholder="mm/dd/yyyy">
                      </div>
                    </div>
                    <div class="col-md-6">
                      <fieldset class="form-group">
                        <p>Gender</p>
                        <div class="form-check-inline">
                          <label class="form-check-label">
                            <input type="radio" class="form-check-input" name="employee[employee_gender]" value="Male"> Male
                          </label>
                        </div>
                        <div class="form-check-inline">
                          <label class="form-check-label">
                            <input type="radio" class="form-check-input" name="employee[employee_gender]" value="Female"> Female
                          </label>
                        </div>
                        <div class="form-check-inline">
                          <label class="form-check-label">
                            <input type="radio" class="form-check-input" name="employee[employee_gender]" value="Other"> Other
                          </label>
                        </div>
                      </fieldset>
                    </div>
                    <div class="col-md-6">
                      <div class="form-group">
                        <label for="DOJ">Date of Joining</label>
                        <input type="date" class="form-control" id="DOJ" name="employee[employee_doj]" placeholder="mm/dd/yyyy">
                      </div>
                    </div>



                  </div>
                </div>
                <!--display image-->
                <div class="col-md-4">
                  <div class="row">
                    <div class="col-md-12">
                      <div style="text-align: center;">
                          <img id="img-upload">
                          <div id="tem_img">
                            <img src="images\avatar_img.png" alt="" width="150px" height="180px">
                          </div>
                          <br><br>

                            <span class="input-group-btn">
                              <span class="btn btn-info btn-file">
                                Image(4X6)<input type="file" id="imginp" name="employee[employee_photo]">
                              </span>
                            </span>

                      </div>
                    </div>
                  </div>
                </div>

                  <div class="col-md-4">
                    <div class="form-group">
                      <label for="email">Email ID</label>
                      <input type="email" class="form-control" id="email" name="employee[employee_email]" placeholder="Enter Email">
                    </div>
                  </div>
                  <div class="col-md-4">
                    <div class="form-group">
                      <label for="phn">Phone Number</label>
                      <input type="tel" class="form-control" id="phn" name="employee[employee_phno_1]" placeholder="Enter Number">
                    </div>
                  </div>

                <!--Salary-->
                <div class="col-md-4">
                  <div class="form-group">
                    <label for="salary">Salary</label>
                    <input type="number" name="employee[employee_salary]" class="form-control" placeholder="Salary">
                  </div>
                </div>
                <!--designation-->
                <div class="col-md-6">
                  <div class="form-group">
                    <label for="designation">Designation</label>
                    <select class="form-control" id="designation" name="employee[employee_designation]">
                      <option>Choose Designation</option>
                      <option value="Trainee">Trainee</option>
                      <option value="Software Engineer">Software Engineer</option>
                      <option value="System Analyst">System Analyst</option>
                      <option value="Project manager">Project manager</option>
                      <option value="Delivery Head">Delivery Head</option>
                      <option value="Business Analyst">Business Analyst</option>
                      <option value="Architect">Architect</option>
                      <option value="Technical Specialist">Technical Specialist</option>
                    </select>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    <label for="dep">Department</label>
                    <input type="text" class="form-control" id="dep" name="employee[employee_department]" placeholder="Department" required="">
                    <span id="available"></span>
                  </div>
                </div>
                <div class="col-md-12">
                  <div class="form-group">
                    <label for="address">Permanent Address</label>
                    <textarea class="form-control" id="address" name="employee[employee_address]" rows="4"></textarea>
                  </div>
                </div>
                <div class="col-md-12" style="">

                  <input type="submit" id="btn" name="btn"  class="btn btn-primary" style="width: 100px; border-radius: 10px;">
                  &nbsp;&nbsp;
                </div>
              </div>
            </form>

        <br><br>
      </div>
    </div>
  </div>




  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
